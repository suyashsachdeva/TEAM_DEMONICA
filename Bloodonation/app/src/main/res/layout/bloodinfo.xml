<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/blood_bank_ic_launcher_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/boarder"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why Should You Donate Blood?"
            android:textSize="25dp"
            android:paddingTop="8dp" />
        <TextView
            android:gravity="start"
            android:layout_gravity="center"
            android:background="@drawable/boarder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"/>

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:backgroundTint="@color/common_google_signin_btn_text_dark_default"
            android:background="@drawable/boarder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eligibility_"
            android:textSize="25dp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="386dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/boarder"
            android:gravity="start"
            android:padding="10dp"
            android:text="@string/male_"
            android:textSize="20sp" />

        <TextView
            android:layout_width="382dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/boarder"
            android:gravity="start"
            android:padding="10dp"
            android:text="@string/female_"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>
